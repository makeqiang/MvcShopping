<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Image/icon.jpg" rel="icon" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar nav-tabs navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header" style="width:100%">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("首页","Index","Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("购物车","Index","Cart", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("我的订单","","",new { area=""},new { @class= "navbar-brand"})
                <em style="margin-left:-100px;margin-top:40px;font-size:20px; color:red;"></em>
                @if (User.Identity.IsAuthenticated)
                {
                    <div style="float:right;">
                        @Html.ActionLink(User.Identity.Name,"", "" ,new { area = "" }, new { @class = "navbar-brand" })
                        @Html.ActionLink("注销", "Logout", "Member", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                }
                else
                {
                    <div style="float:right;">
                        @Html.ActionLink("登录", "Login", "Member", new { area = "" },new { @class = "navbar-brand"})
                        @Html.ActionLink("注册", "Register", "Member", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    @RenderSection("scripts", required:false)
    <div id="Content" class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @@2017 版权所有,侵权必究! By秋叶随风
        </footer>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>